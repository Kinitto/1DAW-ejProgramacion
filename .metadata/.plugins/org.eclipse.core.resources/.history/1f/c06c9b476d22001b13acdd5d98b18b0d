package es.studium.Ejemplo1tabla;
import java.util.Scanner;

public class Ejemplo1tabla {
	
	
	public static void main(String[] args) 
	{
		Scanner teclado = new Scanner(System.in);
		final int TAM = 5;
		int i;
		int numero[] = new int [TAM];
		int mitad[] = new int [TAM];
		
		for (i=0;i<TAM;i++)
		{
			System.out.println("Dame el valor de tabla["+i+"]");
			numero[i]=teclado.nextInt();
		}
		for (i=0;i<TAM;i++)
		{
			mitad[i]=(numero[i]/2);
			System.out.println(mitad[i]);
		}
		teclado.close();
	}

}
